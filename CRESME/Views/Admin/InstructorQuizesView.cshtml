@using System.Data
@model DataSet

@{
    ViewData["Title"] = "Instructor's Quizes";
}

<h1>List all quizes created by the instructor</h1>

<br />
<br />

    <div class="table-responsive">

    <table class="table table-hover table-bordered" id="dataTableData" width="100%" cellspacing="0">


        <thead>
                <tr>
                   
                    <th>
                        QuizName
                    </th>

                    <th>
                        Block
                    </th>

                    <th>
                        Course
                    </th>

                    

                    <th>
                        Term
                    </th>

                    <th>
                        Published
                    </th>
                    
                    @*DO NOT delete the empty tags below, they are needed for dataTable column counts to be equal between "thead" and "tbody"*@
                    <th></th>
                    

                    
                </tr>
            </thead>




            <tbody>

                @foreach (DataRow row in Model.Tables[0].Rows)
                {
                    <tr>
                        <td>
                        @row["QuizName"]
                        </td>

                        <td>
                        @row["Block"]
                        </td>

                        <td>
                        @row["Course"]
                        </td>


                        <td>
                        @row["Term"]
                        </td>

                        <td>
                        @row["Published"]
                        </td>



                        <td>
                        <form asp-controller="Admin" asp-action="TakeQuiz" asp-route-QuizId="@row["QuizId"]">  
                                    <button type="submit" class="btn btn-sm btn-primary">
                                    <i class="fa-solid fa-play"></i>
                                        Start Quiz
                                    </button>
                            </form>
                        </td>




                    </tr>
                }

            </tbody>

        </table>

    </div>





@section scripts
{
    <script src="~/js/datatable_file.js"></script>
}
