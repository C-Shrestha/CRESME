@model CRESME.Data.ApplicationUser

@{
    ViewData["Title"] = "Delete by Block/Course";
}

<h1>Delete by Block/Course</h1>


<hr />


<div class="row">
    <div class="col-md-4">

        <form asp-controller="Admin" asp-action="DeleteByCombination" method="post" onsubmit="return confirm('Are you sure you want to delete all users in the selected block/term?');">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <p>Warning: This will delete all users in the selected block/course combination. Their Attempts will not be deleted.</p>

            <div class="form-group">
                <label>Block</label>
                <input asp-for="Block" class="form-control" />
               
            </div>

            <br />

            <div class="form-group">
                <label>Course</label>
                <input asp-for="Course" class="form-control" />
               
            </div>

            <br />

            <div class="form-group">
                <label>Term</label>
                <input asp-for="Term" class="form-control" />

            </div>

            <br />

            <div class="col-4 text-center" style="font-weight: bold;">Role:</div>

                <div class="form-check form-check-inline col-3">
                    <input class="form-check-input" type="radio" asp-for="Role" value="Student" checked>
                    <label class="form-check-label" for="flexRadioDefault1">
                        Student
                    </label>
                </div>

                <div class="form-check form-check-inline col-3">
                    <input class="form-check-input" type="radio" asp-for="Role" value="Instructor">
                    <label class="form-check-label" for="flexRadioDefault2">
                        Instructor
                    </label>
                </div>
                <div class="w-100"></div>
           
                <br />
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>

            <br />

        </form>
    </div>
</div>

<div>
    <a asp-action="ListUsers">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
