@model CRESME.Data.ApplicationUser

@{
    ViewData["Title"] = "Delete by Block(Instructor)";
}

<h1>Delete by Block (Instructor)</h1>


<hr />


<div class="row">
    <div class="col-md-4">
        <form asp-controller="Admin" asp-action="DeleteByBlockInstructors" method="post" onsubmit="return confirm('Are you sure you want to delete all instructors in this block?');">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label>Instructors's Block</label>
                <input asp-for="Block" class="form-control" />
                <span asp-validation-for="Block" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>

            <br />

        </form>
    </div>
</div>

<div>
    <a asp-action="ListUsers">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
