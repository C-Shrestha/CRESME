@model IEnumerable<CRESME.Data.Quiz>

@{
    ViewData["Title"] = "Practice CRESME";
}


<br />

<h1>Practice CRESME</h1>


<br />


<div class="table-responsive">

    <table class="table table-hover table-bordered" id="dataTableData" width="100%" cellspacing="0">


        <thead>
            <tr>
                <th>
                    CRESME
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Block)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Course)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Term)
                </th>

                

                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>

               

                <th>
                    Practice
                </th>



                @*DO NOT delete the empty tags below, they are needed for dataTable column counts to be equal between "thead" and "tbody"*@
                <th></th>
                
                


            </tr>
        </thead>




        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.QuizName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Block)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Course)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Term)
                    </td>

                    

                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>

                    

                    <td>

                        @if (item.FeedBackEnabled == "Yes")
                        {
                            <i class="fa-solid fa-circle-check fa-2xl" style="color: #00ff00;"></i>
                        }
                        else
                        {
                            <i class="fa-solid fa-circle-xmark fa-2xl" style="color: #ff0000;"></i>
                        }
                    </td>


                    <td>
                        <form asp-controller="Quiz" asp-action="TakeQuiz" asp-route-QuizId="@item.QuizId">
                            <button type="submit" class="btn btn-sm btn-success">
                                <i class="fa-solid fa-circle-play"></i>
                                Start
                            </button>
                        </form>
                    </td>


                </tr>
            }

        </tbody>

    </table>

</div>



<style>

    #dataTableData {
        color: black;
        border-style: solid;
        border-color: #F1C400;
    }

    td {
        color: black;
        font-weight: bold;
    }

    th {
        color: black;
        font-weight: bold;
    }

</style>

<br />


@section scripts
    {
    <script src="~/js/datatable_file.js"></script>
}


