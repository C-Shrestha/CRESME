<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>CRESME Report</title>
    <style type="text/css">


        .main-body {
            padding: 0;
            text-indent: 0;
            margin-top: 5pt;
            margin-left: 5pt
        }

        h1 {
            color: black;
            font-family: "Arial", serif;
            font-style: normal;
            font-weight: bold;
            text-decoration: none;
            font-size: 16pt;
        }

        h2 {
            color: black;
            font-family: "Arial", serif;
            font-style: normal;
            font-weight: bold;
            text-decoration: none;
            font-size: 13pt;
        }

        .s1 {
            color: black;
            font-family: "Arial", serif;
            font-style: normal;
            font-weight: normal;
            text-decoration: none;
            font-size: 13pt;
        }

        .p,
        p {
            color: black;
            font-family: "Arial", serif;
            font-style: normal;
            font-weight: normal;
            text-decoration: none;
            font-size: 13pt;
        }

    </style>
</head>
<body>

    <div class="main-body" style="margin-bottom:50px;">
        <h1 style="
        padding-top: 3pt;
        padding-left: 6pt;
        text-indent: 0pt;
        text-align: left;
      ">
            @Model.QuizName
        </h1>



        <p style="text-indent: 0pt; text-align: left"><br /></p>
        <h2 style="padding-left: 6pt; text-indent: 0pt; text-align: left">
            Directions:
            <span class="s1">
                Save your report as PDF by clicking the "Create PDF" button. Upload the saved report PDF
                to the assignment in Webcourses.
            </span>
        </h2>
        <p style="text-indent: 0pt; text-align: left"><br /></p>

        <h2 style="padding-left: 6pt; text-indent: 0pt; text-align: left">
            Date: <span class="s1">  @DateTime.Now  </span>
        </h2>

        <p style="text-indent: 0pt; text-align: left"><br /></p>
        <h2 style="padding-left: 6pt; text-indent: 0pt; text-align: left">
            Start Time: <span class="s1">  @Model.StartTime </span>
            &nbsp;
            &nbsp;
            End Time:
            <span class="s1">  @Model.EndTime  </span>
        </h2>

        <br />
        @*<p style="text-indent: 0pt; text-align: left"><br /></p>*@
        @*<h2 style="padding-left: 6pt; text-indent: 0pt; text-align: left">
        Student&#39;s Name:
        </h2>*@
        @*<p style="
        padding-top: 4pt;
        padding-left: 6pt;
        text-indent: 0pt;
        text-align: left;
        ">
        @Model.StudentName
        </p>*@

        <h2 style="padding-left: 6pt; text-indent: 0pt; text-align: left">
            Student Name: <span class="s1">  @Model.StudentName  </span>
        </h2>


        @*<p style="text-indent: 0pt; text-align: left"><br /></p>
        <h2 style="padding-left: 6pt; text-indent: 0pt; text-align: left">
        CASE 1
        </h2>*@
        <h2 style="
        padding-top: 7pt;
        padding-left: 6pt;
        text-indent: 0pt;
        text-align: left;
      ">
            CC:
            <span class="s1"> @Model.PatientIntro </span>
        </h2>


        <h2 style="
        padding-top: 7pt;
        padding-left: 6pt;
        text-indent: 0pt;
        text-align: left;
      ">
            PE
        </h2>


        <p style="
        padding-top: 4pt;
        padding-left: 6pt;
        text-indent: 0pt;
        line-height: 130%;
        text-align: justify;
      ">
            PE (A) = @Model.PhysicalAnswerA
            <br />
            PE (B) = @Model.PhysicalAnswerB
            <br />
            PE (C) = @Model.PhysicalAnswerC
            <br />
            PE (D) = @Model.PhysicalAnswerD
            <br />
            @if (Model.NumColumns == 5)
            {
                string htmlContent = "PE (E) = ";

                @Html.Raw(htmlContent) @Model.PhysicalAnswerE

            }

        </p>



        <h2 style="
        padding-top: 7pt;
        padding-left: 6pt;
        text-indent: 0pt;
        text-align: left;
      ">
            Data
        </h2>

        <p style="
        padding-top: 4pt;
        padding-left: 6pt;
        text-indent: 0pt;
        line-height: 130%;
        text-align: justify;
      ">
            Data (A) = @Model.DiagnosticAnswerA
            <br />
            Data (B) = @Model.DiagnosticAnswerB
            <br />
            Data (C) = @Model.DiagnosticAnswerC
            <br />
            Data (D) = @Model.DiagnosticAnswerD
            <br />
            @if (Model.NumColumns == 5)
            {
                string htmlContent = "Data (E) = ";

                @Html.Raw(htmlContent) @Model.DiagnosticAnswerE

            }
        </p>



        <h2 style="
        padding-top: 3pt;
        padding-left: 6pt;
        text-indent: 0pt;
        text-align: left;
      ">
            Diagnosis
        </h2>
        <p style="
        padding-top: 4pt;
        padding-left: 6pt;
        text-indent: 0pt;
        line-height: 130%;
        text-align: left;
      ">
            Scenario 1: @Model.FreeResponseA
            <br />
            Scenario 2: @Model.FreeResponseB
            <br />
            Scenario 3: @Model.FreeResponseC
            <br />
            Scenario 4: @Model.FreeResponseD
            <br />
            @if (Model.NumColumns == 5)
            {
                string htmlContent = "Scenario 5: ";

                @Html.Raw(htmlContent) @Model.FreeResponseE

            }
        </p>






        @if (@Model.Image0Name != null)
        {
            <p>@Model.Image0Name: @Model.NumImage0Clicks clicks</p>
        }

        @if (@Model.Image1Name != null)
        {
            <p>@Model.Image1Name: @Model.NumImage1Clicks clicks</p>
        }

        @if (@Model.Image2Name != null)
        {
            <p>@Model.Image2Name: @Model.NumImage2Clicks clicks</p>
        }

        @if (@Model.Image3Name != null)
        {
            <p>@Model.Image3Name: @Model.NumImage3Clicks clicks</p>
        }

        @if (@Model.Image4Name != null)
        {
            <p>@Model.Image4Name: @Model.NumImage4Clicks clicks</p>
        }

        @if (@Model.Image5Name != null)
        {
            <p>@Model.Image5Name: @Model.NumImage5Clicks clicks</p>
        }

        @if (@Model.Image6Name != null)
        {
            <p>@Model.Image6Name: @Model.NumImage6Clicks clicks</p>
        }

        @if (@Model.Image7Name != null)
        {
            <p>@Model.Image7Name: @Model.NumImage7Clicks clicks</p>
        }

        @if (@Model.Image8Name != null)
        {
            <p>@Model.Image8Name: @Model.NumImage8Clicks clicks</p>
        }

        @if (@Model.Image9Name != null)
        {
            <p>@Model.Image9Name: @Model.NumImage9Clicks clicks</p>
        }

        <p style="text-indent: 0pt; text-align: left"><br /></p>
        <h2 style="padding-left: 5pt; text-indent: 0pt; text-align: left">
            Lab Values Viewed
        </h2>
        <p style="
        padding-top: 4pt;
        padding-left: 5pt;
        text-indent: 0pt;
        text-align: left;
      ">
            Labs: @Model.NumLabValueClicks time(s)

            <br />

            Legend: @Model.NumLegendClicks time(s)






        </p>
    </div>
</body>
</html>







@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/datatable_file.js"></script>
}