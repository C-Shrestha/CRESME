<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CRESME</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/DataTableCss/jquery.datatables.css" rel="stylesheet" />
    <link href="~/css/DataTableCss/jquery.datatables.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/CRESME.styles.css" asp-append-version="true" />

   
</head>
<body style="display: flex; flex-direction: column; margin-bottom: 0px;">
    <header>
        <div style="width: 100%; height: 25px; background-color: #000;"></div>
        <div style="width: 100%; height: 5px; background-color: #f1c400;"></div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CRESME</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        

                        @*<li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>*@

                        @if (User.Identity.IsAuthenticated)
                        {

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>

                            


                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="CreateAccounts">Accounts</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="ListUsers">Users</a>
                                </li>

                                

                                <li class="nav-item">
                                    <a class="nav-link text-dark" href="/swagger/index.html">SwaggerHub</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="ListAllQuizes">CRESMES</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Quiz" asp-action="CreateQuiz">Create CRESME</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="ChangePassword">Change Password</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="ForgotPassword">Forgot Password</a>
                                </li>

                                
                            }

                            

                            @if (User.IsInRole("Instructor"))
                            {

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Quiz" asp-action="CreateQuiz">Create CRESME</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="InstructorQuizesView">Your CRESMES</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="AllCresmeInstructors">All CRESMES</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="ChangePassword">Change Password</a>
                                </li>
                                
                            }



                            @if (User.IsInRole("Student"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="AssignedQuizes">Assigned CRESMES</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="PastQuizes">Past CRESMES</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="PracticeQuizes">Practice CRESMES</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="ChangePassword">Change Password</a>
                                </li>


                            }


                            @*<li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Quiz" asp-action="TakeQuiz">Take CRESME</a>
                            </li>*@

                            

                            

                        }


                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
        <div style="width: 100%; height: 5px; background-color: #f1c400;"></div>
    </header>
    <div style="height:100%;">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div style="width: 100%; height: 5px; background-color: #fcf4cf;"></div>
        <div class="container">
            2023 CRESME &copy; UCF
        </div>
        <div style="width: 100%; height: 5px; background-color: #f1c400;"></div>
        <div style="width: 100%; height: 25px; background-color: #000;"></div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/DataTable/jquery.datatables.js"></script>
    <script src="~/DataTable/jquery.datatables.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/50d8449c4c.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <style>
        .nav-item .active {
            color: #F1C400 !important;
        }
    </style>

    <script>

        window.onload = function () {

            var links = document.getElementsByClassName("nav-link");
            length = links.length;

            for (let i = 0; i < length; i++) {

                if (links[i].innerHTML == "@ViewData["Title"]")
                    links[i].classList.add("active");

                
            }
        };

    </script>

</body>
</html>
